<resources>
    <!-- Base application theme. -->
    <style name="AppTheme"  parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="BodyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBodyText</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif</item>
    </style>


    <style name="RecipientNameText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorBodyText</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="CaptionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorCaptionText</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="FeeAmountText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorCaptionText</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="RecipientAccountNumberText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorCaptionText</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="DetailsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorDetailsText</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/colorDetailsText</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>


    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/dialog_rounded_corners</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:typeface">monospace</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />


</resources>